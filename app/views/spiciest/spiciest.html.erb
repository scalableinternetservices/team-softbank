<%= render 'shared/header' %>

<h1>Spiciest Posts</h1>

<% @posts.each do |post| %>
  <%= render partial: 'shared/postcard', locals: { post: post, location: nil } %>
<% end %>

<ul class="pagination">
  <li class="<%= "page-item page-prev #{@spiciest_page > 1 ? "" : "disabled"}" %>">
    <%= link_to "Previous posts", spiciest_path(spiciest_page: @spiciest_page - 1), class: "page-item-title h5" %>
  </li>
  <li class="<%= "page-item page-next #{@spiciest_page < @spiciest_page_max ? "" : "disabled"}" %>">
    <%= link_to "Next posts", spiciest_path(spiciest_page: @spiciest_page + 1), class: "page-item-title h5" %>
  </li>
</ul>
