<% if user_signed_in? %>
  <div>Signed in as... <%= current_user.email %></div>
<%end%>
<% @posts.each do |post| %>
  <div>
    <h1><%= post.title %></h1>
    <h3>By <%= post.author %></h3>
    <h3>spice level: <%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></h3>
    <p><%= link_to 'Full post', post_path(post) %></p>
  </div>
<% end %>
